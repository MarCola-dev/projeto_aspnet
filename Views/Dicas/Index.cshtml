@model MvcFill.ViewModels.Fill

@{
    ViewData["Title"] = "Dicas";
}
<form asp-controller="Dicas" asp-action="Index" method="get">
    <p>
        <select asp-for="TipsAutor" asp-items="Model.Autors">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<article class="d-flex flex-wrap bd-highlight mb-3 justify-Tips.content-start">
    @foreach (var item in Model.Tips) {
        <div class="p-2 bd-highlight" style="width: 18rem;">
            <img src='@Html.DisplayFor(modelItem => item.UrlImg)' class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Resume)</p>
                <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-primary">Leia Mais</a>
            </div>
        </div>
    }
</article>